{{>sidebar}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Homework</h3>
        </div>
        <div class="card-body">
            <form action="/homeworks/new-homework" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="homework_id" class="form-control" placeholder="ID" autofocus>
                </div>
                <div class="form-group">
                    <input type="url" name="link" class="form-control" placeholder="Google Drive Link">
                </div>
                <div class="form-group">
                    <input type="text" name="subject" class="form-control" placeholder="Subject">
                </div>
                <div> 
                <label for="image">Upload Image</label> 
                <input type="file" id="image" name="image" value="" required> 
            </div> 
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>