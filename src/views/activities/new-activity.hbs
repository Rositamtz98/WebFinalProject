{{>footer}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New activity</h3>
        </div>
        <div class="card-body">
            <form action="/activities/new-activity" method="POST">
                <div class="form-group">
                    <input type="text" name="activity_id" class="form-control" placeholder="ID" autofocus>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Course_id</label>
                  <select name="course_id" class="form-control" id="exampleFormControlSelect1" onchange="onSelect()">
                  {{#each courses}}
                      <option value={{_id}}>{{subject}}</option>
                    {{else}}
                      <option>no hay cursos</option>
                      <h4>nada</h4>
                    {{/each}}
                  </select>
                </div>
                <div class="form-group">
                    <input type="url" name="link" class="form-control" placeholder="Google Drive Link">
                </div>
                <div class="form-check">
                  <input type="checkbox" name="quiz" onchange="onCheck()" class="form-check-input" id="exampleCheck1" data-toggle="switch" value={{activity.quiz}}>
                  <label class="form-check-label" for="exampleCheck1">Quiz?</label>
                </div>
                <div class="form-group">
                    <input type="text" name="value" class="form-control" placeholder="Value" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
  function onSelect() {
    console.log('here');
    var e = document.getElementById("exampleFormControlSelect1");
    var v = e.value;
    console.log(e);
    console.log(v);
    console.log({{course_id}})
  }
  function onCheck() {
    var c = document.getElementById("exampleCheck1");
    console.log(c)
    if(c.checked == true){
        document.getElementById("exampleCheck1").setAttribute("value", "true");
    }else{
        document.getElementById("exampleCheck1").setAttribute("value", "false");
   }
    console.log({{quiz}})
  }
</script>