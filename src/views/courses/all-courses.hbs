{{> sidebar }}
{{> footer }}
<div class="row">
  <a href="/courses/add" class="btn btn-success btn-block">+</a>
</div>
<div class="row">
  {{#each courses}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title d-flex justify-content-between align-items-center">
            {{subject}} <a href="/courses/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h2>
          <h4>{{teacher_id}}</h4>
          <a href="/courses/view/{{_id}}" class="btn btn-success btn-block">Ver actividades</a>
          <form action="/courses/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger btn-block btn-sm" type="submit">
              Borrar
            </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">No hay ning√∫n curso</p>
        <a href="/courses/add" class="btn btn-success btn-block">Crea uno</a>
      </div>
    </div>
  {{/each}}
</div>
