<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Curso {{course.course_id}}</h3>
        </div>
        <div class="card-body">
            <form action="/courses/edit-course/{{course._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="subject" class="form-control" placeholder="Subject" value="{{course.subject}}">
                </div>
                <div class="form-group">
                    <input type="text" name="teacher_id" class="form-control" placeholder="Teacher ID" value="{{course.teacher_id}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>