{{> sidebar }}
{{> footer }}
<div class="row">
  <a href="/activities/add" class="btn btn-success btn-block">+</a>
  {{#each acts}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title d-flex justify-content-between align-items-center">
            {{activity_id}}<a href="/activities/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h2>
          <button class="btn btn-link" onclick=" window.open('{{link}}','_blank')" type="button">Abrir con Google Drive</button>
          <h4>{{teacher_id}}</h4>
        </div>
        <div>
          <a href="/activities/view/{{_id}}" class="btn btn-success btn-block">Ver entregas</a>
          <form action="/activities/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger btn-block btn-sm" type="submit">
              Borrar
            </button>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">No hay actividades para este curso</p>
        <a href="/activities/add" class="btn btn-success btn-block">Crea una</a>
      </div>
    </div>
  {{/each}}
</div>
